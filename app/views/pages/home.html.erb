<h1>Нас уже <%=@users.count%> человек!</h1>

<table id="users">
	<thead>
		<th>Lvl.</th><th>Ник</th><th>Город</th>
	</thead>
	<tbody>
		<%@users.each do |u|%>
		<tr>
			<td><%=u.level%></td><td><%=image_tag u.character.image%> <%= link_to u.email, u%></td><td><%= link_to u.city.name, u.city%></td>
		</tr>
		<%end%>
	</tbody>
</table>
