<h1>Регистрация</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :Реальное_имя %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Игровой_ник %><br />
    <%= f.text_field :email %>
  </p>
  <p>*соблюдаем регистр букв (большие и маленькие)</p>
  <p>
    <%= f.label :Пароль %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :Подтверждение_пароля %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>*не стоит указывать пороль игры</p>
  <p class="button"><%= f.submit "Зарегиццо" %></p>
<% end %>