<h2>Стена записей</h2>

<table>
  <tr>
    <th>Кто</th>
    <th>Что</th>
    <th>Когда</th>
  </tr>

<% @walls.each do |wall| %>
  <tr>
    <td><%= wall.user.email %></td>
    <td><%= wall.post %></td>
    <td><%= time_ago_in_words(wall.created_at) %> назад
    	<%if current_user%>
    		<%if current_user.id == wall.user.id or admin_user %> (<%= link_to 'x', wall, confirm: 'Точно?', method: :delete %>)
    	<%end%>
    <%end%>    	
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новая запись', new_wall_path if current_user %>
